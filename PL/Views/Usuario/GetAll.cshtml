@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
}

<div class="container">
    <div class="row">
        <h2>Usuario</h2>
    </div>
    <br />
    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    <br />
    <div class="row">
        @if (Model.Usuarios != null)
        {
            //tabla
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="hidden">IdUsuario</td>
                        <td class="text-center" style=" font-weight:bold;">Nombre</td>
                        <td class="text-center" style=" font-weight:bold;">Fecha Nacimineto</td>
                        <td class="text-center" style=" font-weight:bold;">Sexo</td>
                        <td class="text-center" style=" font-weight:bold;">Estado Civil</td>
                        <td class="text-center" style=" font-weight:bold;">Curp</td>
                        <td class="hidden">IdDireccion</td>
                        <td class="text-center" style=" font-weight:bold;">Estado</td>
                        <td class="text-center" style=" font-weight:bold;">Municipio</td>
                        <td class="text-center" style=" font-weight:bold;">Colonia</td>
                        <td class="text-center" style=" font-weight:bold;">Calle</td>
                        <td class="text-center" style=" font-weight:bold;">Actualizar</td>
                        <td class="text-center" style=" font-weight:bold;">Eliminar</td>

                    </tr>
                </thead>

                <tbody>
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr>
                            <td class="hidden">@usuario.IdUsuario</td>
                            <td>@usuario.Nombre @usuario.ApellidoPaterno @usuario.ApellidoMaterno</td>
                            <td>@usuario.FechaNacimineto</td>
                            <td>@usuario.Sexo</td>
                            <td>@usuario.EstadoCivil</td>
                            <td>@usuario.Curp</td>
                            <td class="hidden">@usuario.Direccion.IdDireccion</td>
                            <td>@usuario.Direccion.Estado</td>
                            <td>@usuario.Direccion.Municipio</td>
                            <td>@usuario.Direccion.Colonia</td>
                            <td>@usuario.Direccion.Calle</td>
                            

                            <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario })"></a></td>
                            <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario, IdDireccion=usuario.Direccion.IdDireccion })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>


        }
        else
        {
            <div class="alert alert-danger" role="alert">Ocurrio un error al realizar la consulta </div>
        }
    </div>
</div>

